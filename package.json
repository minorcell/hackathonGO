{
  "name": "claude-code-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React + MUI + TS desktop wrapper for Claude Code CLI",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev:web": "vite",
    "dev:electron": "ELECTRON_DEV=true electron .",
    "dev": "concurrently -k \"npm:dev:web\" \"npm:dev:electron\"",
    "build:web": "vite build",
    "build": "npm run build:web",
    "start": "electron ."
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^6.1.2",
    "electron": "^30.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.11",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
